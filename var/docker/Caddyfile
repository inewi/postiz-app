:5000 {
	@allowed_ip {
		remote_ip {$ALLOWED_IP}
	}

	handle @allowed_ip {
		handle_path /api/* {
			reverse_proxy localhost:3000
		}

		handle_path /uploads/* {
			root * /uploads/
			file_server
		}

		handle {
			reverse_proxy localhost:4200
		}
	}

	handle {
		respond "Access denied. Allowed IP: {$ALLOWED_IP}. Your IP is {http.request.remote} or {remote_ip}" 403
	}
}
