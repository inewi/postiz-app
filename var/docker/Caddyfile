:5000 {
	@allowed_ip {
		expression `{http.request.header['X-Forwarded-For'][0]} == {$ALLOWED_IP}`
	}

	handle @allowed_ip {
		handle_path /api/* {
			reverse_proxy localhost:3000
		}

		handle_path /uploads/* {
			root * /uploads/
			file_server
		}

		handle {
			reverse_proxy localhost:4200
		}
	}

	handle {
		respond "Access denied." 403
	}
}
